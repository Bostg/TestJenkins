pipeline {
    agent any

    stages {
        stage('clean') {
            steps {
                bat 'if exist TestJenkins rmdir TestJenkins /s /q'
            }
        }
        stage('clone') {
            steps {
                bat 'git clone https://github.com/Bostg/TestJenkins'
            }
        }
        stage('build') {
            steps {
                bat 'dotnet build TestJenkins/TestJenkins'
            }
        }
        stage('unit test(s)') {
            steps {
                bat 'dotnet test TestJenkins/TestJenkins'
            }
        }
        stage('run') {
            steps {
                bat 'dotnet run --project TestJenkins/TestJenkins/TestJenkins --configuration Release'
            }
        }
    }
}